<% layout("/layouts/boilerplate") -%>
<body>
    <h3>All listings</h3>
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-1 g-4">
        <% for (let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listings-link">
            <div class="col ">
                <div class="card  listing-card h-100">
                    <img src="<%= listing.image.url  %>" class="card-img-top" alt="Listing image" style="height: 20rem; object-fit: cover;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br>
                            <% if (listing && listing.price) { %>
                                &#8377;<%= listing.price.toLocaleString("en-IN") %>/Night
                            <% } else { %>
                                Price Not Available
                            <% } %>
                            
                        </p>
                    </div>
                </div>
            </div>
        </a>
        <% } %>
    </div>
</body>
